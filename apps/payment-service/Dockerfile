# Run the container with `docker run -p 3000:3000 -t payment-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system payment-service && \
          adduser --system -G payment-service payment-service

COPY dist/apps/payment-service payment-service/
RUN chown -R payment-service:payment-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix payment-service --omit=dev -f install

CMD [ "node", "payment-service" ]
