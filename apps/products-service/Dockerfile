# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t products-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system products-service && \
          adduser --system -G products-service products-service

COPY dist/apps/products-service products-service/
RUN chown -R products-service:products-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix products-service --omit=dev -f install

CMD [ "node", "products-service" ]
